{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "incremental": true,
        "noEmit": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": false,
        "tsBuildInfoFile": "./.cache/tsbuildinfo/tsconfig.build.tsbuildinfo",
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["test/**/*.ts"]
}
